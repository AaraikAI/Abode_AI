# Abode AI - Production Environment Configuration
# Copy this file to .env.production and fill in your values

# =============================================================================
# BACKEND SERVICES
# =============================================================================

# AI Parsing Service (YOLO/Detectron2)
AI_PARSING_ENDPOINT=http://localhost:8003
AI_PARSING_API_KEY=your-api-key-here

# ifcopenshell Service
IFCOPENSHELL_ENDPOINT=http://localhost:8004

# AI Lighting Service
AI_LIGHTING_ENDPOINT=http://localhost:8005

# =============================================================================
# AI & ML SERVICES
# =============================================================================

# OpenAI (for RAG embeddings and reasoning)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4

# Anthropic Claude (alternative for reasoning)
ANTHROPIC_API_KEY=your-anthropic-key-here

# Rodin AI (3D generation)
NEXT_PUBLIC_RODIN_API_KEY=your-rodin-api-key-here

# =============================================================================
# PARTNER INTEGRATIONS
# =============================================================================

# Coohom API
COOHOM_API_KEY=your-coohom-api-key-here
COOHOM_BASE_URL=https://api.coohom.com/v1

# AIHouse API
AIHOUSE_API_KEY=your-aihouse-api-key-here
AIHOUSE_BASE_URL=https://api.aihouse.com/v2

# =============================================================================
# CLOUD SERVICES
# =============================================================================

# Azure Cognitive Services
AZURE_COGNITIVE_ENDPOINT=https://your-resource.cognitiveservices.azure.com
AZURE_COGNITIVE_KEY=your-azure-key-here

# AWS Rekognition
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# =============================================================================
# CDN & EDGE COMPUTING
# =============================================================================

# Cloudflare
CLOUDFLARE_API_KEY=your-cloudflare-api-key
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_ZONE_ID=your-zone-id

# Fastly
FASTLY_API_KEY=your-fastly-api-key
FASTLY_SERVICE_ID=your-service-id

# =============================================================================
# COMMUNITY & FORUMS
# =============================================================================

# Discourse
DISCOURSE_URL=https://forum.your-domain.com
DISCOURSE_API_KEY=your-discourse-api-key
DISCOURSE_USERNAME=system
DISCOURSE_SSO_SECRET=your-sso-secret-here

# =============================================================================
# GEOSPATIAL DATA SOURCES
# =============================================================================

# USGS Seismic Hazard Maps
USGS_API_KEY=your-usgs-api-key

# FEMA Flood Maps
FEMA_API_KEY=your-fema-api-key

# NOAA Climate Data
NOAA_API_KEY=your-noaa-api-key

# =============================================================================
# OBSERVABILITY
# =============================================================================

# OpenTelemetry Collector
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=abode-ai
OTEL_ENVIRONMENT=production

# Jaeger
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# DATABASE & CACHE
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/abode_ai

# Redis
REDIS_URL=redis://localhost:6379

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_AI_PARSING=true
ENABLE_AI_LIGHTING=true
ENABLE_MULTI_STEP_REASONING=true
ENABLE_RODIN_AI=true
ENABLE_RAG=true
ENABLE_SLM=true
ENABLE_CFD=true
ENABLE_RISK_MODELS=true
ENABLE_EDGE_COMPUTING=true
ENABLE_DISCOURSE=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
LOG_LEVEL=info
ENABLE_ANALYTICS=true
